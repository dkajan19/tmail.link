<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Vnútorná farba pozadia -->
    <solid android:color="?attr/colorTertiary"/>

    <!-- Zaoblené rohy -->
    <corners android:radius="8dp"/>

    <!-- Farba a hrúbka rámčeka -->
    <stroke
        android:width="2dp"
        android:color="?attr/colorPrimary"/>

    <!-- Voliteľne odsadenie obsahu od okrajov -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
